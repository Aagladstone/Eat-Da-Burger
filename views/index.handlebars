<h1>Devour The Burger!</h1>

<h2>Available Burgers</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      <button>{{this.burger_name}}</button>	
      {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
{{#unless devoured}}
      <button>{{name.burger_name}}</button>	
      {{/unless }}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger!</button>
</form>

